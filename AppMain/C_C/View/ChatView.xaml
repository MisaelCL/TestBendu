<Window x:Class="C_C_Final.View.ChatView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:C_C_Final.ViewModel"
        mc:Ignorable="d"
        Title="C_C - Chat"
        Width="520"
        Height="720"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">


    <Window.Resources>
        <LinearGradientBrush x:Key="AppBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#2AAFD0" Offset="0" />
            <GradientStop Color="#BDEDF8" Offset="1" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="HeaderBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#9AD0FF" Offset="0" />
            <GradientStop Color="#C4F0FF" Offset="1" />
        </LinearGradientBrush>

        <SolidColorBrush x:Key="PrimaryTextBrush" Color="#0B2340" />
        <SolidColorBrush x:Key="WhiteBrush" Color="#FFFFFF" />

        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="36" />
            <Setter Property="Height" Value="36" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="18">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <DropShadowEffect x:Key="CardShadow"
                          BlurRadius="12"
                          ShadowDepth="2"
                          Color="#33000000" />
    </Window.Resources>

    <Border CornerRadius="18"
            BorderThickness="1"
            BorderBrush="#2AAFD0">
        <Border.Background>
            <StaticResource ResourceKey="AppBackgroundBrush" />
        </Border.Background>
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Barra superior -->
            <Border Grid.Row="0"
                    Background="{StaticResource HeaderBrush}"
                    CornerRadius="16"
                    Padding="12,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="40" />
                    </Grid.ColumnDefinitions>

                    <Button x:Name="BackButton"
                            Style="{StaticResource IconButtonStyle}"
                            Command="{Binding GoBackCommand}">
                        <Path Width="14"
                              Height="22"
                              Fill="#2B5F7F"
                              Stretch="Uniform"
                              Data="M14,0 L0,11 14,22 14,15 6,11 14,7z" />
                    </Button>

                    <Grid Grid.Column="1"
                          Margin="0,0,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="C&amp;C"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="#2B5F7F"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0" />

                        <TextBlock Grid.Column="1"
                                   Text="CHAT"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="#1A86A5"
                                   VerticalAlignment="Center" />

                        <Border Grid.Column="2"
                                Width="32"
                                Height="32"
                                CornerRadius="16"
                                Background="#FFFFFF"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                ClipToBounds="True">
                            <Image Source="{Binding ContactoAvatarUrl}"
                                   Stretch="UniformToFill"
                                   RenderOptions.BitmapScalingMode="HighQuality" />
                        </Border>
                    </Grid>

                    <Button x:Name="OptionsButton"
                            Grid.Column="2"
                            Style="{StaticResource IconButtonStyle}"
                            Command="{Binding OpenMenuCommand}">
                        <Image Source="/C_C_Final;component/Images/Ajustes_Icon.png"
                               Width="22"
                               Height="22" />
                    </Button>
                </Grid>
            </Border>

            <!-- Barra de contacto -->
            <Border Grid.Row="1"
                    Margin="0,8,0,0"
                    Background="#E8FAFF"
                    CornerRadius="18"
                    Padding="12,8"
                    Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="32" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Border Width="32"
                            Height="32"
                            CornerRadius="16"
                            ClipToBounds="True">
                        <Image Source="{Binding ContactoAvatarUrl}"
                               Stretch="UniformToFill" />
                    </Border>

                    <TextBlock Grid.Column="1"
                               Text="{Binding ContactoNombre}"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryTextBrush}"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0" />

                    <Button x:Name="ThreadMenuButton"
                            Grid.Column="2"
                            Style="{StaticResource IconButtonStyle}"
                            Width="32"
                            Height="32"
                            Command="{Binding OpenThreadMenuCommand}">
                        <TextBlock Text="⋮"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#1A86A5" />
                    </Button>
                </Grid>
            </Border>

            <!-- Lista de mensajes -->
            <Border Grid.Row="2"
                    Margin="0,12,0,0"
                    Background="#33FFFFFF"
                    CornerRadius="16"
                    Padding="12">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding Mensajes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40" />
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="40" />
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="{Binding AvatarColumn}"
                                            Width="32"
                                            Height="32"
                                            CornerRadius="16"
                                            ClipToBounds="True"
                                            HorizontalAlignment="{Binding BubbleAlign}">
                                        <Image Source="{Binding AvatarUrl}"
                                               Stretch="UniformToFill" />
                                    </Border>

                                    <Border Grid.Column="{Binding BubbleColumn}"
                                            Background="{Binding BubbleColor}"
                                            CornerRadius="18"
                                            Padding="12,10"
                                            HorizontalAlignment="{Binding BubbleAlign}"
                                            MaxWidth="280">
                                        <TextBlock Text="{Binding Contenido}"
                                                   TextWrapping="Wrap"
                                                   Foreground="{StaticResource PrimaryTextBrush}" />
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Composer -->
            <Grid Grid.Row="3"
                  Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="64" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Background="{StaticResource WhiteBrush}"
                        CornerRadius="18"
                        Padding="12,8">
                    <TextBox Text="{Binding NuevoMensaje, UpdateSourceTrigger=PropertyChanged}"
                             BorderThickness="0"
                             Background="Transparent"
                             Foreground="{StaticResource PrimaryTextBrush}"
                             FontSize="14"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             MinHeight="36"
                             VerticalScrollBarVisibility="Auto" />
                </Border>

                <Button Grid.Column="1"
                        Width="56"
                        Height="56"
                        Background="{StaticResource WhiteBrush}"
                        BorderThickness="0"
                        Cursor="Hand"
                        Command="{Binding EnviarMensajeCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="28"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch">
                                <Image Source="/C_C_Final;component/Images/SendArow.png"
                                       Width="24"
                                       Height="24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- Menús emergentes -->
            <Popup Placement="Bottom"
                   PlacementTarget="{Binding ElementName=OptionsButton}"
                   IsOpen="{Binding IsChatMenuOpen, Mode=TwoWay}"
                   StaysOpen="False"
                   AllowsTransparency="True"
                   PopupAnimation="Fade">
                <Border Background="#051527"
                        BorderBrush="#05AFC6"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="12">
                    <StackPanel>
                        <Button Content="Ver perfil"
                                Style="{StaticResource MenuButtonStyle}"
                                Command="{Binding VerPerfilCommand}" />
                        <Separator Margin="0,4" />
                        <Button Content="Bloquear"
                                Style="{StaticResource MenuButtonStyle}"
                                Command="{Binding BloquearContactoCommand}" />
                        <Separator Margin="0,4" />
                        <Button Content="Eliminar chat"
                                Style="{StaticResource MenuButtonStyle}"
                                Command="{Binding EliminarChatCommand}" />
                    </StackPanel>
                </Border>
            </Popup>

            <Popup Placement="Bottom"
                   PlacementTarget="{Binding ElementName=ThreadMenuButton}"
                   IsOpen="{Binding IsThreadMenuOpen, Mode=TwoWay}"
                   StaysOpen="False"
                   AllowsTransparency="True"
                   PopupAnimation="Fade">
                <Border Background="#051527"
                        BorderBrush="#05AFC6"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="12">
                    <StackPanel>
                        <Button Content="Silenciar"
                                Style="{StaticResource MenuButtonStyle}"
                                Command="{Binding SilenciarChatCommand}" />
                        <Separator Margin="0,4" />
                        <Button Content="Marcar como no leído"
                                Style="{StaticResource MenuButtonStyle}"
                                Command="{Binding MarcarNoLeidoCommand}" />
                    </StackPanel>
                </Border>
            </Popup>
        </Grid>
    </Border>
</Window>
