<Window x:Class="C_C.View.ChatView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="C_C - Chat" Height="500" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button Content="Actualizar" Command="{Binding CargarMensajesCommand}" Width="100" Height="28" />
        <ListBox Grid.Row="1" ItemsSource="{Binding Mensajes}" Margin="0 12 0 12">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0 4" Padding="8" Background="#FF2D3748" CornerRadius="4">
                        <StackPanel>
                            <TextBlock Text="{Binding Remitente}" FontWeight="Bold" />
                            <TextBlock Text="{Binding Contenido}" TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBox Text="{Binding Mensaje, UpdateSourceTrigger=PropertyChanged}" Width="260" Margin="0 0 8 0" />
            <Button Content="Enviar" Command="{Binding EnviarMensajeCommand}" Width="80" />
        </StackPanel>
    </Grid>
</Window>
