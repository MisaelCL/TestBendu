<Window x:Class="C_C.View.ChatView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="C_C - Chat" Height="520" Width="420" WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="Cargar" Command="{Binding LoadCommand}" Width="90" Margin="0 0 8 0" />
            <Button Content="MÃ¡s" Command="{Binding LoadMoreCommand}" Width="90" />
        </StackPanel>
        <ListBox Grid.Row="1" ItemsSource="{Binding Mensajes}" Margin="0 12 0 12">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0 4" Padding="8" Background="#FF2D3748" CornerRadius="4">
                        <StackPanel>
                            <TextBlock Text="{Binding Remitente}" FontWeight="Bold" />
                            <TextBlock Text="{Binding Contenido}" TextWrapping="Wrap" />
                            <TextBlock Text="{Binding FechaEnvio}" FontStyle="Italic" FontSize="10" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock Grid.Row="2" Text="{Binding Error}" Foreground="OrangeRed" TextWrapping="Wrap" Margin="0 0 0 8" />
        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <TextBox Text="{Binding NuevoMensaje, UpdateSourceTrigger=PropertyChanged}" Width="280" Margin="0 0 8 0" />
            <Button Content="Enviar" Command="{Binding SendCommand}" Width="90" />
        </StackPanel>
    </Grid>
</Window>
