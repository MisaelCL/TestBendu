<Window x:Class="C_C_Final.View.RegistroView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:C_C_Final.ViewModel"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="C_C - Registro"
        Width="460"
        Height="720"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
    </Window.Resources>

    <Border CornerRadius="18"
            Background="#0B2340"
            BorderBrush="#0B2340"
            BorderThickness="1">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="32" />
                    <ColumnDefinition Width="32" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="C_C - Registro"
                           Foreground="#E6E9ED"
                           FontSize="16"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0" />

                <Button x:Name="btnMinimizar"
                        Grid.Column="1"
                        Width="28"
                        Height="28"
                        Margin="0,0,4,0"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnMinimizar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#05AFC6" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="14"
                                                Background="{TemplateBinding Background}">
                                            <TextBlock Text="&#x2013;"
                                                       FontSize="14"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0494A8" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="btnClose"
                        Grid.Column="2"
                        Width="28"
                        Height="28"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnClose_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#D7596D" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="14"
                                                Background="{TemplateBinding Background}">
                                            <TextBlock Text="&#x2715;"
                                                       FontSize="12"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C14D60" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <Border Grid.Row="1"
                    CornerRadius="18"
                    Background="#0B2340"
                    BorderBrush="#0B2340"
                    BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel HorizontalAlignment="Center"
                                Width="340"
                                Margin="0,0,0,16">
                        <StackPanel Margin="0,0,0,16">
                            <Image Source="/C_C_Final;component/Images/C_C_LOGO.png"
                                   Width="140"
                                   Height="140"
                                   HorizontalAlignment="Center"
                                   Stretch="Uniform" />
                            <Image Source="/C_C_Final;component/Images/Clase_Cita.png"
                                   Width="200"
                                   Height="60"
                                   HorizontalAlignment="Center"
                                   Stretch="Uniform"
                                   Margin="0,8,0,0" />
                        </StackPanel>

                        <Border Background="#E6E9ED"
                                CornerRadius="14"
                                BorderBrush="#05AFC6"
                                BorderThickness="3"
                                Padding="20">
                            <StackPanel>
                                <TextBlock Text="Carrera/Unidad:"
                                           Foreground="#0B2340"
                                           FontWeight="SemiBold" />
                                <ComboBox ItemsSource="{Binding Carreras}"
                                          SelectedItem="{Binding CarreraSeleccionada, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Margin="0,6,0,12"
                                          Padding="10"
                                          Background="White"
                                          BorderBrush="#0494A8"
                                          BorderThickness="1" />

                                <TextBlock Text="Matrícula:"
                                           Foreground="#0B2340"
                                           FontWeight="SemiBold" />
                                <TextBox Text="{Binding Matricula, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,6,0,12"
                                         Padding="10"
                                         FontSize="14"
                                         Foreground="#0B2340"
                                         Background="White"
                                         BorderBrush="#0494A8"
                                         BorderThickness="1"
                                         CaretBrush="#0494A8"
                                         ToolTip="Ej. 20231234" />

                                <TextBlock Text="Nombre completo:"
                                           Foreground="#0B2340"
                                           FontWeight="SemiBold" />
                                <TextBox Text="{Binding NombreCompleto, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,6,0,12"
                                         Padding="10"
                                         FontSize="14"
                                         Foreground="#0B2340"
                                         Background="White"
                                         BorderBrush="#0494A8"
                                         BorderThickness="1"
                                         CaretBrush="#0494A8"
                                         ToolTip="Nombre y apellidos" />

                                <TextBlock Text="Género:"
                                           Foreground="#0B2340"
                                           FontWeight="SemiBold" />
                                <ComboBox ItemsSource="{Binding Generos}"
                                          SelectedItem="{Binding GeneroSeleccionado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Margin="0,6,0,12"
                                          Padding="10"
                                          Background="White"
                                          BorderBrush="#0494A8"
                                          BorderThickness="1" />

                                <TextBlock Text="Fecha de nacimiento:"
                                           Foreground="#0B2340"
                                           FontWeight="SemiBold" />
                                <DatePicker SelectedDate="{Binding FechaNacimiento, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Margin="0,6,0,12"
                                            Background="White"
                                            BorderBrush="#0494A8"
                                            BorderThickness="1"
                                            DisplayDateEnd="{x:Static System:DateTime.Today}" />

                                <TextBlock Text="Correo Electrónico:"
                                           Foreground="#0B2340"
                                           FontWeight="SemiBold" />
                                <TextBox Text="{Binding Correo, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,6,0,12"
                                         Padding="10"
                                         FontSize="14"
                                         Foreground="#0B2340"
                                         Background="White"
                                         BorderBrush="#0494A8"
                                         BorderThickness="1"
                                         CaretBrush="#0494A8"
                                         ToolTip="usuario@dominio.com" />

                                <TextBlock Text="Contraseña:"
                                           Foreground="#0B2340"
                                           FontWeight="SemiBold" />
                                <PasswordBox x:Name="passwordBox"
                                             Margin="0,6,0,12"
                                             Padding="10"
                                             Background="White"
                                             BorderBrush="#0494A8"
                                             BorderThickness="1"
                                             PasswordChanged="PasswordBox_PasswordChanged" />

                                <TextBlock Text="Confirmar contraseña:"
                                           Foreground="#0B2340"
                                           FontWeight="SemiBold" />
                                <PasswordBox x:Name="confirmPasswordBox"
                                             Margin="0,6,0,0"
                                             Padding="10"
                                             Background="White"
                                             BorderBrush="#0494A8"
                                             BorderThickness="1"
                                             PasswordChanged="ConfirmPasswordBox_PasswordChanged" />

                                <TextBlock Text="{Binding ErrorMessage}"
                                           Foreground="#D7596D"
                                           FontSize="12"
                                           Margin="0,10,0,0"
                                           TextWrapping="Wrap">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ErrorMessage}" Value="">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ErrorMessage}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Button Content="REGISTRARSE"
                                Command="{Binding RegisterCommand}"
                                Height="48"
                                Margin="0,24,0,0"
                                Background="#05AFC6"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="18"
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#05AFC6" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#0494A8" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Border>
</Window>
