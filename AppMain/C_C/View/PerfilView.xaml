<Window x:Class="C_C_Final.View.PerfilView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:C_C_Final.ViewModel"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="C_C - Mi Perfil"
        Width="520"
        Height="760"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <SolidColorBrush x:Key="BgPrimaryBrush" Color="#0B2340" />
        <SolidColorBrush x:Key="SurfaceBrush" Color="#E6E9ED" />
        <SolidColorBrush x:Key="TextLightBrush" Color="#FFFFFF" />
        <SolidColorBrush x:Key="TextDarkBrush" Color="#0B2340" />
        <SolidColorBrush x:Key="ChipBrush" Color="#C7E6FF" />
        <SolidColorBrush x:Key="ButtonBrush" Color="#05AFC6" />
        <SolidColorBrush x:Key="ButtonTextBrush" Color="#FFFFFF" />
        <SolidColorBrush x:Key="BadgeBrush" Color="#FFD400" />

        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <Style x:Key="TopBarIconButton" TargetType="Button">
            <Setter Property="Width" Value="36" />
            <Setter Property="Height" Value="36" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="18">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="0" />
        </Style>

        <Style x:Key="PillButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#D9D9D9" />
            <Setter Property="Foreground" Value="{StaticResource TextDarkBrush}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="16,6" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="24">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextLightBrush}" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>

        <Style x:Key="PostCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#6EA9C8" />
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Margin" Value="0,10,0,0" />
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BgPrimaryBrush}"
            BorderBrush="{StaticResource BgPrimaryBrush}"
            CornerRadius="18"
            BorderThickness="1">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Barra superior -->
            <Grid Grid.Row="0"
                  Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="40" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Style="{StaticResource TopBarIconButton}"
                        Command="{Binding GoBackCommand}">
                    <Path Width="14"
                          Height="22"
                          Fill="White"
                          Stretch="Uniform"
                          Data="M14,0 L0,11 14,22 14,15 6,11 14,7z" />
                </Button>

                <Grid Grid.Column="1"
                      Margin="0,0,0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="24" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="24" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center">
                        <Image Source="/C_C_Final;component/Images/Chat_Icon.png"
                               Width="22"
                               Height="22" />
                        <Border Background="{StaticResource BadgeBrush}"
                                CornerRadius="9"
                                Width="18"
                                Height="18"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="10,-6,-6,0"
                                Visibility="{Binding HasUnread, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="{Binding UnreadCount}"
                                       FontSize="10"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextDarkBrush}" />
                        </Border>
                    </Grid>

                    <TextBlock Grid.Column="1"
                               Text="C&amp;C"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#9AD0FF"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />

                    <Button Grid.Column="2"
                            Style="{StaticResource TopBarIconButton}"
                            Command="{Binding OpenMenuCommand}">
                        <Image Source="/C_C_Final;component/Images/Ajustes_Icon.png"
                               Width="22"
                               Height="22" />
                    </Button>
                </Grid>

                <Rectangle Grid.ColumnSpan="3"
                           Height="4"
                           Fill="#9AD0FF"
                           VerticalAlignment="Bottom"
                           Margin="0,36,0,0" />
            </Grid>

            <!-- Contenido scrollable -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Tarjeta de cabecera -->
                    <Border CornerRadius="22"
                            Background="Transparent"
                            Margin="0,0,0,12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="140" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0"
                                    CornerRadius="22,22,0,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#05AFC6" Offset="0" />
                                        <GradientStop Color="#7AD4E1" Offset="1" />
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>

                            <Ellipse Grid.Row="0"
                                     Width="120"
                                     Height="120"
                                     Stroke="White"
                                     StrokeThickness="6"
                                     VerticalAlignment="Bottom"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,-18">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding FotoPerfilUrl}" Stretch="UniformToFill" />
                                </Ellipse.Fill>
                            </Ellipse>

                            <Ellipse Grid.Row="0"
                                     Width="28"
                                     Height="28"
                                     Fill="#9AF874"
                                     VerticalAlignment="Bottom"
                                     HorizontalAlignment="Center"
                                     Margin="84,0,0,-6" />

                            <Border Grid.Row="1"
                                    Background="{StaticResource ChipBrush}"
                                    CornerRadius="24"
                                    Padding="12,6"
                                    HorizontalAlignment="Center"
                                    Margin="0,24,0,0">
                                <TextBlock Text="{Binding NikName}"
                                           Foreground="{StaticResource TextDarkBrush}"
                                           FontWeight="Bold" />
                            </Border>

                            <UniformGrid Grid.Row="2"
                                         Rows="1"
                                         Columns="2"
                                         Margin="0,16,0,0"
                                         HorizontalAlignment="Center">
                                <Button Content="Editar perfil"
                                        Command="{Binding EditarPerfilCommand}"
                                        Style="{StaticResource PillButtonStyle}"
                                        Margin="0,0,10,0" />
                                <Button Content="Subir Foto"
                                        Command="{Binding SubirFotoCommand}"
                                        Style="{StaticResource PillButtonStyle}" />
                            </UniformGrid>
                        </Grid>
                    </Border>

                    <!-- Descripción -->
                    <StackPanel>
                        <TextBlock Text="Descripción del usuario"
                                   Style="{StaticResource SectionTitleStyle}" />
                        <TextBox Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Background="{StaticResource SurfaceBrush}"
                                 Foreground="{StaticResource TextDarkBrush}"
                                 BorderThickness="0"
                                 Padding="12"
                                 MinHeight="80"
                                 FontSize="14"
                                 Margin="0,0,0,6" />
                        <Button Content="Guardar cambios"
                                Command="{Binding GuardarDescripcionCommand}"
                                Background="{StaticResource ButtonBrush}"
                                Foreground="{StaticResource ButtonTextBrush}"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Padding="18,8"
                                Cursor="Hand"
                                HorizontalAlignment="Left">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="24">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <!-- Publicaciones -->
                    <StackPanel Margin="0,18,0,0">
                        <TextBlock Text="Publicaciones"
                                   Style="{StaticResource SectionTitleStyle}" />
                        <ItemsControl ItemsSource="{Binding Publicaciones}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource PostCardStyle}">
                                        <StackPanel>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="32" />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0"
                                                        Width="30"
                                                        Height="30"
                                                        CornerRadius="15"
                                                        Background="White">
                                                    <Image Source="{Binding AvatarUrl}"
                                                           Stretch="UniformToFill" />
                                                </Border>

                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding Titulo}"
                                                           FontWeight="Bold"
                                                           Foreground="{StaticResource TextLightBrush}"
                                                           Margin="8,0,0,0" />

                                                <TextBlock Grid.Column="2"
                                                           Text="{Binding FechaPublicacion}"
                                                           Foreground="#E6E9ED"
                                                           FontSize="12" />
                                            </Grid>

                                            <Image Source="{Binding ImagenUrl}"
                                                   Height="280"
                                                   Stretch="UniformToFill"
                                                   Margin="0,10,0,0"
                                                   ClipToBounds="True">
                                                <Image.Clip>
                                                    <RectangleGeometry RadiusX="14" RadiusY="14" Rect="0,0,500,280" />
                                                </Image.Clip>
                                            </Image>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>