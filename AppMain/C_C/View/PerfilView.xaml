<Window x:Class="C_C.View.PerfilView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="C_C - Perfil" Height="420" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Perfil" FontSize="24" Margin="0 0 0 8" />
            <TextBlock Text="Nikname" FontWeight="SemiBold" />
            <TextBox Text="{Binding Perfil.Nikname, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 12" />
            <TextBlock Text="BiografÃ­a" FontWeight="SemiBold" />
            <TextBox Text="{Binding Perfil.Biografia, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="120" TextWrapping="Wrap" Margin="0 0 0 12" />
            <TextBlock Text="Foto de perfil (Base64)" FontWeight="SemiBold" />
            <TextBox Text="{Binding FotoPerfilBase64, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="80" TextWrapping="Wrap" />
        </StackPanel>
        <Button Grid.Row="1" Content="Guardar" Command="{Binding GuardarCommand}" Width="120" Height="32" HorizontalAlignment="Right" Margin="0 12 0 0" />
    </Grid>
</Window>
