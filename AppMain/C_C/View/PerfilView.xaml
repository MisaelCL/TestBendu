<Window x:Class="C_C.View.PerfilView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="C_C - Perfil" Height="420" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Spacing="8">
            <TextBlock Text="Perfil" FontSize="24" />
            <TextBox Text="{Binding Perfil.Nombre, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox Text="{Binding Perfil.Apellido_Paterno, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox Text="{Binding Perfil.Apellido_Materno, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox Text="{Binding Perfil.Nickname, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox Text="{Binding Perfil.Biografia, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="120" TextWrapping="Wrap" />
        </StackPanel>
        <Button Grid.Row="1" Content="Guardar" Command="{Binding GuardarCommand}" Width="120" Height="32" HorizontalAlignment="Right" Margin="0 12 0 0" />
    </Grid>
</Window>
