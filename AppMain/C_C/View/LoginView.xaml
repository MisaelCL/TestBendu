<Window x:Class="C_C.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="C_C - Iniciar sesión" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Border Padding="24" Background="#FF1F2933">
        <StackPanel Spacing="12">
            <TextBlock Text="Bienvenido a C_C" FontSize="20" Foreground="White" HorizontalAlignment="Center" />
            <StackPanel>
                <TextBlock Text="Correo" Foreground="White" />
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Contraseña" Foreground="White" />
                <PasswordBox x:Name="PasswordBox" PasswordChanged="OnPasswordChanged" />
            </StackPanel>
            <Button Content="Iniciar sesión" Command="{Binding LoginCommand}" Height="32" />
            <TextBlock Text="{Binding Error}" Foreground="OrangeRed" TextWrapping="Wrap" />
        </StackPanel>
    </Border>
</Window>
