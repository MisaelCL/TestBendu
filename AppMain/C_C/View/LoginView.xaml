<Window x:Class="C_C_Final.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:C_C_Final.ViewModel"
        xmlns:customcontrols="clr-namespace:C_C_Final.CustomControls"
        mc:Ignorable="d"
        Title="C_C - Clase &amp; Cita"
        Width="420"
        Height="620"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />

        <Style TargetType="{x:Type customcontrols:BindablePasswordBox}">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#0494A8" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="#0B2340" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type customcontrols:BindablePasswordBox}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <PasswordBox x:Name="PART_PasswordBox"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="{TemplateBinding Foreground}"
                                         FontSize="{TemplateBinding FontSize}"
                                         Padding="{TemplateBinding Padding}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.Visibility>
        <Binding Path="IsViewVisible"
                 Mode="TwoWay"
                 Converter="{StaticResource BooleanToVisibility}" />
    </Window.Visibility>

    <Border CornerRadius="18"
            Background="#0B2340"
            BorderBrush="#0B2340"
            BorderThickness="1">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="32" />
                    <ColumnDefinition Width="32" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="C_C - Clase &amp; Cita"
                           Foreground="#E6E9ED"
                           FontSize="16"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0" />

                <Button x:Name="btnMinimizar"
                        Grid.Column="1"
                        Width="28"
                        Height="28"
                        Margin="0,0,4,0"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnMinimizar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#05AFC6" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="14"
                                                Background="{TemplateBinding Background}">
                                            <TextBlock Text="&#x2013;"
                                                       FontSize="14"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0494A8" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="btnClose"
                        Grid.Column="2"
                        Width="28"
                        Height="28"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnClose_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#D7596D" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="14"
                                                Background="{TemplateBinding Background}">
                                            <TextBlock Text="&#x2715;"
                                                       FontSize="12"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C14D60" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <Border Grid.Row="1"
                    CornerRadius="18"
                    Background="#0B2340"
                    BorderBrush="#0B2340"
                    BorderThickness="1">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Width="320">
                    <StackPanel Margin="0,0,0,16">
                        <Image Source="/C_C_Final;component/Images/C_C_LOGO.png"
                               Width="140"
                               Height="140"
                               HorizontalAlignment="Center"
                               Stretch="Uniform" />
                        <Image Source="/C_C_Final;component/Images/Clase_Cita.png"
                               Width="200"
                               Height="60"
                               HorizontalAlignment="Center"
                               Stretch="Uniform"
                               Margin="0,8,0,0" />
                    </StackPanel>

                    <Border Background="#E6E9ED"
                            CornerRadius="14"
                            BorderBrush="#05AFC6"
                            BorderThickness="3"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Matrícula / Correo electrónico:"
                                       Foreground="#0B2340"
                                       FontWeight="SemiBold" />
                            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,6,0,12"
                                     Padding="10"
                                     FontSize="14"
                                     Foreground="#0B2340"
                                     Background="White"
                                     BorderBrush="#0494A8"
                                     BorderThickness="1"
                                     CaretBrush="#0494A8"
                                     ToolTip="Escribe tu matrícula o correo" />

                            <TextBlock Text="Contraseña:"
                                       Foreground="#0B2340"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,6" />
                            <customcontrols:BindablePasswordBox SecurePassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                Height="36"
                                                                Padding="10"
                                                                Background="White"
                                                                BorderBrush="#0494A8"
                                                                BorderThickness="1" />

                            <TextBlock Text="{Binding ErrorMessage}"
                                       Foreground="#D7596D"
                                       FontSize="12"
                                       Margin="0,10,0,0"
                                       TextWrapping="Wrap">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ErrorMessage}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ErrorMessage}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Button Content="INICIAR SESIÓN"
                            Command="{Binding LoginCommand}"
                            Height="48"
                            Margin="0,24,0,0"
                            Background="#05AFC6"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="18"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#05AFC6" />
                                <Setter Property="Foreground" Value="White" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#0494A8" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="REGISTRARSE"
                            Command="{Binding OpenRegistroCommand}"
                            Height="48"
                            Margin="0,18,0,0"
                            Background="#05AFC6"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="18"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#05AFC6" />
                                <Setter Property="Foreground" Value="White" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#0494A8" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <TextBlock Text="¿Aún no tienes cuenta?"
                               Margin="0,12,0,0"
                               Foreground="#E6E9ED"
                               TextDecorations="Underline"
                               HorizontalAlignment="Center"
                               Cursor="Hand">
                        <TextBlock.InputBindings>
                            <MouseBinding MouseAction="LeftClick"
                                          Command="{Binding OpenRegistroCommand}" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
