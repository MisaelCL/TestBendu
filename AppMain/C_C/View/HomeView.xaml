<Window x:Class="C_C_Final.View.HomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:C_C_Final.ViewModel"
        mc:Ignorable="d"
        Title="C_C"
        Width="520"
        Height="720"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="#0B2340"
            BorderBrush="#0B2340"
            BorderThickness="1"
            CornerRadius="18">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Barra superior con accesos de ajustes -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="28" />
                    <ColumnDefinition Width="28" />
                </Grid.ColumnDefinitions>

                <Button x:Name="LeftSettingsButton"
                        Grid.Column="0"
                        Width="36"
                        Height="36"
                        Command="{Binding OpenSettingsCommand}"
                        Background="#05AFC6"
                        BorderThickness="0"
                        Cursor="Hand"
                        ToolTip="Ajustes">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="18">
                                <Image Source="/C_C_Final;component/Images/Ajustes_Icon.png"
                                       Width="18"
                                       Height="18"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#05AFC6" />
                            <Setter Property="Foreground" Value="White" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0494A8" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <TextBlock Grid.Column="1"
                           Text="C&amp;C"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#9AD0FF"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />

                <Button x:Name="RightSettingsButton"
                        Grid.Column="2"
                        Width="36"
                        Height="36"
                        Command="{Binding OpenSettingsCommand}"
                        Background="#05AFC6"
                        BorderThickness="0"
                        Cursor="Hand"
                        ToolTip="Ajustes">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="18">
                                <Image Source="/C_C_Final;component/Images/Ajustes_Icon.png"
                                       Width="18"
                                       Height="18"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#05AFC6" />
                            <Setter Property="Foreground" Value="White" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0494A8" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="btnMinimize"
                        Grid.Column="3"
                        Width="24"
                        Height="24"
                        Margin="0,0,4,0"
                        Background="#05AFC6"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnMinimize_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="12">
                                <TextBlock Text="&#x2013;"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#05AFC6" />
                            <Setter Property="Foreground" Value="White" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0494A8" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="btnClose"
                        Grid.Column="4"
                        Width="24"
                        Height="24"
                        Background="#D7596D"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnClose_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="12">
                                <TextBlock Text="&#x2715;"
                                           FontSize="10"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#D7596D" />
                            <Setter Property="Foreground" Value="White" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C14D60" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Menú contextual de ajustes -->
            <Popup Placement="Bottom"
                   PlacementTarget="{Binding ElementName=RightSettingsButton}"
                   IsOpen="{Binding IsSettingsMenuOpen, Mode=TwoWay}"
                   StaysOpen="False"
                   AllowsTransparency="True"
                   PopupAnimation="Fade">
                <Border Background="#051527"
                        BorderBrush="#05AFC6"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="12">
                    <StackPanel>
                        <Button Content="Mi Perfil"
                                Command="{Binding GoMiPerfilCommand}"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                HorizontalContentAlignment="Left"
                                Padding="8"
                                Cursor="Hand" />
                        <Separator Margin="0,4" />
                        <Button Content="Bloquear Perfil"
                                Command="{Binding BloquearPerfilCommand}"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                HorizontalContentAlignment="Left"
                                Padding="8"
                                Cursor="Hand" />
                    </StackPanel>
                </Border>
            </Popup>

            <!-- Tarjeta principal con el carrusel de perfiles -->
            <Border Grid.Row="1"
                    Margin="0,16,0,0"
                    Background="#05AFC6"
                    CornerRadius="18"
                    Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <ContentControl Grid.Row="0"
                                    Content="{Binding PerfilActual}">
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Setter Property="ContentTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>

                                                <Border Grid.Row="0"
                                                        CornerRadius="18"
                                                        ClipToBounds="True">
                                                    <Image Source="{Binding FotoUrl}"
                                                           Stretch="UniformToFill" />
                                                </Border>

                                                <Border Grid.Row="1"
                                                        Margin="0,-64,0,0"
                                                        CornerRadius="12"
                                                        Background="#80000000"
                                                        Padding="12">
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding NombreEdad}"
                                                                   FontSize="28"
                                                                   FontWeight="Bold"
                                                                   Foreground="#FFFFFF" />
                                                        <TextBlock Text="{Binding CarreraTexto}"
                                                                   Margin="0,6,0,0"
                                                                   FontSize="14"
                                                                   Foreground="#FFFFFF" />
                                                    </StackPanel>
                                                </Border>

                                                <Grid Grid.Row="2"
                                                      Margin="0,12,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>

                                                    <Button Grid.Column="0"
                                                            Width="42"
                                                            Height="42"
                                                            Content="&#x276E;"
                                                            FontSize="24"
                                                            Foreground="#FFFFFF"
                                                            Background="#80000000"
                                                            BorderThickness="0"
                                                            Cursor="Hand"
                                                            Command="{Binding DataContext.PrevCommand, RelativeSource={RelativeSource AncestorType=Window}}" />

                                                    <Button Grid.Column="2"
                                                            Width="42"
                                                            Height="42"
                                                            Content="&#x276F;"
                                                            FontSize="24"
                                                            Foreground="#FFFFFF"
                                                            Background="#80000000"
                                                            BorderThickness="0"
                                                            Cursor="Hand"
                                                            Command="{Binding DataContext.NextCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
                                                </Grid>
                                            </Grid>
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="Content" Value="{x:Null}">
                                        <Setter Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <StackPanel HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                Margin="16">
                                                        <TextBlock Text="Sin sugerencias disponibles"
                                                                   FontSize="18"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#0B2340"
                                                                   TextAlignment="Center" />
                                                        <TextBlock Text="Agrega perfiles para comenzar a conectar."
                                                                   Margin="0,8,0,0"
                                                                   Foreground="#0B2340"
                                                                   TextAlignment="Center" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>

                    <Grid Grid.Row="1"
                          Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="1"
                                Width="56"
                                Height="56"
                                Content="✖"
                                FontSize="24"
                                Foreground="#FFFFFF"
                                Background="#E53935"
                                BorderThickness="0"
                                Cursor="Hand"
                                Command="{Binding DislikeCommand}" />

                        <Button Grid.Column="2"
                                Width="56"
                                Height="56"
                                Margin="16,0,0,0"
                                Content="❤"
                                FontSize="24"
                                Foreground="#FFFFFF"
                                Background="#1DB954"
                                BorderThickness="0"
                                Cursor="Hand"
                                Command="{Binding LikeCommand}" />
                    </Grid>
                </Grid>
            </Border>

            <!-- Mensaje de estado y métricas -->
            <StackPanel Grid.Row="2"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Center">
                <TextBlock Text="{Binding EstadoMensaje}"
                           Foreground="#E6E9ED"
                           FontSize="14"
                           TextAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </Trigger>
                                <Trigger Property="Text" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,8,0,0">
                    <TextBlock Text="Perfiles disponibles: "
                               Foreground="#FFFFFF"
                               FontWeight="SemiBold" />
                    <TextBlock Text="{Binding Sugerencias.Count}"
                               Foreground="#05AFC6"
                               FontWeight="Bold" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
