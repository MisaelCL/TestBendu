<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NetMAUI_Clase6_Crud_SQLLite.Views.PacienteDetallePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:NetMAUI_Clase6_Crud_SQLLite.ViewModels"
    Title="Detalle del paciente"
    x:DataType="vm:PacienteDetalleViewModels">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Label FontSize="24" FontAttributes="Bold" Text="Información del paciente" />

            <Label FontAttributes="Bold" Text="Nombre" />
            <Label Text="{Binding Paciente.Nombre}" />

            <Label FontAttributes="Bold" Text="Apellido" />
            <Label Text="{Binding Paciente.Apellido}" />

            <Label FontAttributes="Bold" Text="Edad" />
            <Label Text="{Binding Paciente.Edad}" />

            <Label FontAttributes="Bold" Text="Peso (kg)" />
            <Label Text="{Binding Paciente.PesoKg}" />

            <Label FontAttributes="Bold" Text="Estatura (cm)" />
            <Label Text="{Binding Paciente.EstaturaCm}" />

            <Label FontAttributes="Bold" Text="Sexo" />
            <Label Text="{Binding Paciente.Sexo}" />

            <Label FontAttributes="Bold" Text="Nivel de actividad" />
            <Label Text="{Binding Paciente.NivelActividad}" />

            <Label FontAttributes="Bold" Text="Resultados" />
            <Label Text="{Binding Paciente.Imc, StringFormat='IMC: {0:F2}'}" />
            <Label Text="{Binding Paciente.EstadoImc, StringFormat='Estado IMC: {0}'}" />
            <Label Text="{Binding Paciente.PorcentajeGrasa, StringFormat='% Grasa: {0:F2}%'}" />
            <Label Text="{Binding Paciente.ClasificacionGrasa, StringFormat='Clasificación grasa: {0}'}" />
            <Label Text="{Binding Paciente.PesoIdeal, StringFormat='Peso ideal: {0:F2} kg'}" />
            <Label Text="{Binding Paciente.Bmr, StringFormat='BMR: {0:F0}'}" />
            <Label Text="{Binding Paciente.Tdee, StringFormat='TDEE: {0:F0}'}" />

            <HorizontalStackLayout Spacing="10">
                <Button Command="{Binding EditarCommand}" Text="Editar" />
                <Button Command="{Binding EliminarCommand}" Text="Eliminar" TextColor="Red" />
                <Button Command="{Binding RegresarCommand}" Text="Volver" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
