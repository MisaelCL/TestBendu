<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NetMAUI_Clase6_Crud_SQLLite.Views.PacientesListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:NetMAUI_Clase6_Crud_SQLLite.ViewModels"
    x:DataType="vm:PacientesViewModels"
    Title="Pacientes">
    <Grid RowDefinitions="80,*,60" Padding="10">
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Button
                Command="{Binding ListarPacientesCommand}"
                IsEnabled="{Binding IsReady}"
                Text="Actualizar" />
            <Button
                Command="{Binding IrANuevoCommand}"
                Text="Nuevo paciente" />
        </HorizontalStackLayout>

        <Frame Grid.Row="1" CornerRadius="10" Padding="0" BackgroundColor="{StaticResource Gray100}">
            <RefreshView Command="{Binding ListarPacientesCommand}" IsRefreshing="{Binding IsRefreshing}">
                <CollectionView ItemsSource="{Binding Pacientes}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Paciente" xmlns:models="clr-namespace:NetMAUI_Clase6_Crud_SQLLite.Models">
                            <Grid Padding="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <VerticalStackLayout Spacing="2">
                                    <Label FontSize="18" FontAttributes="Bold" Text="{Binding Nombre}" />
                                    <Label FontSize="18" FontAttributes="Bold" Text="{Binding Apellido}" />
                                    <Label FontSize="14" Text="{Binding Imc, StringFormat='IMC: {0:F2}'}" />
                                </VerticalStackLayout>
                                <Button
                                    Grid.Column="1"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:PacientesViewModels}}, Path=VerDetalleCommand}"
                                    CommandParameter="{Binding .}"
                                    Text="Ver" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <Label Margin="12" Text="No hay pacientes registrados" />
                    </CollectionView.EmptyView>
                </CollectionView>
            </RefreshView>
        </Frame>
    </Grid>
</ContentPage>