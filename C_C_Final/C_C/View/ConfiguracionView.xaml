<Window x:Class="C_C_Final.View.ConfiguracionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:C_C_Final.ViewModel"
        xmlns:syswin="clr-namespace:System.Windows;assembly=PresentationFramework"
        mc:Ignorable="d"
        Title="C_C - Configuración"
        Width="420"
        Height="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">


    <Border Background="#0B2340"
            BorderBrush="#0B2340"
            BorderThickness="1"
            CornerRadius="18">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Barra superior -->
            <Grid Grid.Row="0"
                  Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="28" />
                    <ColumnDefinition Width="28" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Width="26"
                        Height="26"
                        Margin="0,0,0,0"
                        Background="#05AFC6"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BackButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="18">
                                <Path Width="12"
                                      Height="18"
                                      Fill="White"
                                      Stretch="Uniform"
                                      Data="M12,0 L0,9 12,18 12,12 6,9 12,6z"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#05AFC6" />
                            <Setter Property="Foreground" Value="White" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0494A8" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <TextBlock Grid.Column="1"
                               Text="C&amp;C"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#9AD0FF"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />

                <Button Grid.Column="2"
                        Margin="-6,0,0,0"
                        Content="&#x2013;"
                        Style="{StaticResource WindowMinimizeButtonStyle}"
                        Click="MinimizeButton_Click" />
                
                <Button Grid.Column="3"
                        Margin="0,0,0,0"
                        Content="&#x2715;"
                        Style="{StaticResource WindowCloseButtonStyle}"
                        Click="CloseButton_Click" />
            </Grid>

            <!-- Contenido desplazable -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Tarjeta de cabecera -->
                    <Border CornerRadius="22"
                            Background="White"
                            Padding="0"
                            Margin="0,0,0,12">
                        <Grid Height="210">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="140" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0"
                                    CornerRadius="20,20,0,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0"
                                                        EndPoint="0,1">
                                        <GradientStop Color="#05AFC6" Offset="0" />
                                        <GradientStop Color="#7AD4E1" Offset="1" />
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>

                            <Grid Grid.Row="0"
                                  Margin="20"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Bottom">
                                <Grid>
                                    <Ellipse Width="100"
                                             Height="100"
                                             Stroke="White"
                                             StrokeThickness="4">
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="{Binding FotoPerfilUrl}" />
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <Button Width="32"
                                            Height="32"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            Margin="0,0,4,4"
                                            Background="White"
                                            BorderThickness="0"
                                            Command="{Binding EditarFotoCommand}">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="16">
                                                    <Image Source="/C_C_Final;component/Images/Lapiz.png"
                                                           Width="16"
                                                           Height="16"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                            </Grid>

                            <Grid Grid.Row="0"
                                  Margin="150,40,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="40" />
                                </Grid.ColumnDefinitions>

                                <Border Background="#BDE2FF"
                                        CornerRadius="14"
                                        Height="40"
                                        VerticalAlignment="Center">
                                    <TextBox Text="{Binding NikName, UpdateSourceTrigger=PropertyChanged}"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Foreground="#0B2340"
                                             FontWeight="Bold"
                                             Padding="12,6"
                                             VerticalContentAlignment="Center"
                                             ToolTip="Nombre de usuario" />
                                </Border>

                                <Button Grid.Column="1"
                                        Width="32"
                                        Height="32"
                                        Margin="8,0,0,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Command="{Binding EditarNombreCommand}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}">
                                                <Image Source="/C_C_Final;component/Images/Lapiz.png"
                                                       Width="16"
                                                       Height="16"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>

                            <Button Grid.Row="2"
                                    Margin="20,12,20,20"
                                    Height="44"
                                    Background="#05AFC6"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    BorderThickness="0"
                                    Command="{Binding GuardarPerfilCommand}"
                                    Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="24"
                                                Padding="12,0">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                Actualizar información
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Descripción -->
                    <Border Background="#E6E9ED"
                            CornerRadius="14"
                            Padding="16"
                            Margin="0,0,0,12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="32" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Descripción del usuario"
                                           Foreground="#0B2340"
                                           FontWeight="Bold" />
                                <Button Grid.Column="1"
                                        Width="28"
                                        Height="28"
                                        Margin="8,0,0,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Command="{Binding EditarDescripcionCommand}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}">
                                                <Image Source="/C_C_Final;component/Images/Lapiz.png"
                                                       Width="14"
                                                       Height="14"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>

                            <TextBox Grid.Row="1"
                                     Margin="0,8,0,0"
                                     Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Background="White"
                                     Foreground="#0B2340"
                                     BorderThickness="0"
                                     Padding="10"
                                     MinHeight="80" />
                        </Grid>
                    </Border>

                    <!-- Secciones -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                                Background="#E6E9ED"
                                CornerRadius="18"
                                Padding="16"
                                Margin="0,0,6,0">
                            <StackPanel>
                                <Border Background="#0B2340"
                                        CornerRadius="24"
                                        Padding="10,6"
                                        HorizontalAlignment="Stretch">
                                    <TextBlock Text="PREFERENCIAS"
                                               Foreground="White"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center" />
                                </Border>

                                <TextBlock Text="Género"
                                           Foreground="#0B2340"
                                           Margin="0,12,0,4"
                                           FontWeight="SemiBold" />
                                <ComboBox ItemsSource="{Binding Generos}"
                                          SelectedItem="{Binding GeneroSeleccionado, Mode=TwoWay}" />

                                <TextBlock Text="Rango de edad"
                                           Foreground="#0B2340"
                                           Margin="0,12,0,4"
                                           FontWeight="SemiBold" />
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Center"
                                                Margin="0,4,0,4">
                                        <TextBlock Text="Mín:" Foreground="#0B2340" Width="40" />
                                        <Slider Minimum="18"
                                                Maximum="{Binding EdadMax, Mode=OneWay}"
                                                TickFrequency="1"
                                                IsSnapToTickEnabled="True"
                                                Value="{Binding EdadMin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        <TextBlock Text="{Binding EdadMin}" Foreground="#0B2340" Width="40" HorizontalAlignment="Right" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Center"
                                                Margin="0,4,0,0">
                                        <TextBlock Text="Máx:" Foreground="#0B2340" Width="40" />
                                        <Slider Minimum="{Binding EdadMin, Mode=OneWay}"
                                                Maximum="99"
                                                TickFrequency="1"
                                                IsSnapToTickEnabled="True"
                                                Value="{Binding EdadMax, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        <TextBlock Text="{Binding EdadMax}" Foreground="#0B2340" Width="40" HorizontalAlignment="Right" />
                                    </StackPanel>
                                </StackPanel>

                                <TextBlock Text="Otro"
                                           Foreground="#0B2340"
                                           Margin="0,12,0,4"
                                           FontWeight="SemiBold" />
                                <Border Background="White"
                                        BorderBrush="#B0C9D4"
                                        BorderThickness="1"
                                        CornerRadius="8">
                                    <TextBox Text="{Binding OtroPreferencia, UpdateSourceTrigger=PropertyChanged}"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Foreground="#0B2340"
                                             Padding="8" />
                                </Border>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1"
                                Background="#B7DCE6"
                                CornerRadius="18"
                                Padding="16"
                                Margin="6,0,0,0">
                            <StackPanel>
                                <Border Background="#0B2340"
                                        CornerRadius="24"
                                        Padding="10,6"
                                        HorizontalAlignment="Stretch">
                                    <TextBlock Text="Mi cuenta"
                                               Foreground="White"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center" />
                                </Border>

                                <Button Margin="0,12,0,0"
                                        Height="42"
                                        Background="#D9D9D9"
                                        Foreground="#0B2340"
                                        BorderThickness="0"
                                        Command="{Binding CerrarSesionCommand}"
                                        Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="24"
                                                    Padding="12,0">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    cerrar sesión
                                </Button>

                                <Button Margin="0,12,0,0"
                                        Height="42"
                                        Background="#E53935"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Command="{Binding EliminarCuentaCommand}"
                                        Cursor="Hand">
                                    
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="24"
                                                    Padding="12,0">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    Eliminar Cuenta
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
