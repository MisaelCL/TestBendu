<Window x:Class="C_C_Final.View.PerfilView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:C_C_Final.ViewModel"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="C_C - Mi Perfil"
        Width="420"
        Height="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <SolidColorBrush x:Key="BgPrimaryBrush" Color="#0B2340" />
        <SolidColorBrush x:Key="SurfaceBrush" Color="#E6E9ED" />
        <SolidColorBrush x:Key="TextLightBrush" Color="#FFFFFF" />
        <SolidColorBrush x:Key="TextDarkBrush" Color="#0B2340" />
        <SolidColorBrush x:Key="ChipBrush" Color="#C7E6FF" />
        <SolidColorBrush x:Key="ButtonBrush" Color="#05AFC6" />
        <SolidColorBrush x:Key="ButtonTextBrush" Color="#FFFFFF" />
        <SolidColorBrush x:Key="BadgeBrush" Color="#FFD400" />

        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <Style x:Key="TopBarIconButton" TargetType="Button">
            <Setter Property="Width" Value="36" />
            <Setter Property="Height" Value="36" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="18">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="0" />
        </Style>

        <Style x:Key="PillButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#D9D9D9" />
            <Setter Property="Foreground" Value="{StaticResource TextDarkBrush}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="16,6" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="24">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextLightBrush}" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>

        <Style x:Key="ChatListItemButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#D2F6FF" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Margin" Value="0,8,0,0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Stretch"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BgPrimaryBrush}"
            BorderBrush="{StaticResource BgPrimaryBrush}"
            CornerRadius="18"
            BorderThickness="1">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            
            
            <!-- Barra superior -->
            
            
            <Grid Grid.Row="0"
                  Margin="0,0,0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="0" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Style="{StaticResource TopBarIconButton}"
                        Command="{Binding ComandoRegresar}">
                    <Path Width="14"
                          Height="22"
                          Fill="White"
                          Stretch="Uniform"
                          Data="M14,0 L0,11 14,22 14,15 6,11 14,7z" />
                </Button>

                <Grid Grid.Column="1"
                      Margin="0,0,0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="24" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="24" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center">
                        <Image Source="/Resources/Images/Chat_Icon.png"
                               Width="22"
                               Height="22" />
                        <Border Background="{StaticResource BadgeBrush}"
                                CornerRadius="9"
                                Width="18"
                                Height="18"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="10,-6,-6,0"
                                Visibility="{Binding HasUnread, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="{Binding UnreadCount}"
                                       FontSize="10"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextDarkBrush}" />
                        </Border>
                    </Grid>

                    <TextBlock Grid.Column="1"
                               Text="C&amp;C"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#9AD0FF"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />

                    <Button x:Name="SettingsButton"
                        Grid.Column="2"
                        Command="{Binding ComandoAlternarConfiguracion}"
                        Background="#05AFC6"
                        BorderThickness="0"
                        Cursor="Hand"
                        ToolTip="Ajustes"
                        HorizontalAlignment="Left"
                        Margin="-7,7,6,3">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                    CornerRadius="18">
                                    <Image Source="/Resources/Images/Ajustes_Icon.png"
                                       Width="29"
                                       Height="18"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#05AFC6" />
                                <Setter Property="Foreground" Value="White" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#0494A8" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <Button Grid.Column="3"
                        Margin="0,0,6,0"
                        Content="&#x2013;"
                        Style="{StaticResource WindowMinimizeButtonStyle}"
                        Click="MinimizeButton_Click" />

                <Button Grid.Column="4"
                        Content="&#x2715;"
                        Style="{StaticResource WindowCloseButtonStyle}"
                        Click="CloseButton_Click" />

                <Rectangle Grid.ColumnSpan="5"
                           Height="4"
                           Fill="#9AD0FF"
                           VerticalAlignment="Bottom"
                           Margin="0,36,0,0" />
            </Grid>

            <Popup Placement="Bottom"
                PlacementTarget="{Binding ElementName=SettingsButton}"
                IsOpen="{Binding IsSettingsMenuOpen, Mode=TwoWay}"
                StaysOpen="False"
                AllowsTransparency="True"
                PopupAnimation="Fade">
                <Border Background="#051527"
                    BorderBrush="#05AFC6"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="12">
                    <StackPanel>
                        <Button Content="Configuración de Perfil"
                            Command="{Binding ComandoIrAConfiguracion}"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            HorizontalContentAlignment="Left"
                            Padding="8"
                            Cursor="Hand" />
                        <Separator Margin="0,4" />
                    </StackPanel>
                </Border>
            </Popup>

            <!-- Contenido scrollable -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Tarjeta de cabecera -->
                    <Border CornerRadius="22"
                            Background="Transparent"
                            Margin="0,0,0,12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="140" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0"
                                    CornerRadius="22,22,0,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#05AFC6" Offset="0" />
                                        <GradientStop Color="#7AD4E1" Offset="1" />
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>

                            <Ellipse Grid.Row="0"
                                     Width="120"
                                     Height="120"
                                     Stroke="White"
                                     StrokeThickness="6"
                                     VerticalAlignment="Bottom"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,-18">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding FotoPerfilUrl}" Stretch="UniformToFill" />
                                </Ellipse.Fill>
                            </Ellipse>

                            <Ellipse Grid.Row="0"
                                     Width="28"
                                     Height="28"
                                     Fill="#9AF874"
                                     VerticalAlignment="Bottom"
                                     HorizontalAlignment="Center"
                                     Margin="84,0,0,-6" />

                            <Border Grid.Row="1"
                                    Background="{StaticResource ChipBrush}"
                                    CornerRadius="24"
                                    Padding="12,6"
                                    HorizontalAlignment="Center"
                                    Margin="0,24,0,0">
                                <TextBlock Text="{Binding NikName}"
                                           Foreground="{StaticResource TextDarkBrush}"
                                           FontWeight="Bold" />
                            </Border>

                        </Grid>
                    </Border>

                    <!-- Descripción -->
                    <StackPanel>
                        <TextBlock Text="Descripción del usuario"
                                   Style="{StaticResource SectionTitleStyle}" />
                        <TextBox Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Background="{StaticResource SurfaceBrush}"
                                 Foreground="{StaticResource TextDarkBrush}"
                                 BorderThickness="0"
                                 Padding="5"
                                 MinHeight="0"
                                 FontSize="14"
                                 Margin="0,0,0,25"
                                 IsReadOnly="True"
                                 IsReadOnlyCaretVisible="False"
                                 IsHitTestVisible="False" />

                    </StackPanel>

                    <!-- Matches pendientes -->
                    <StackPanel Margin="0,18,0,0">
                        <TextBlock Text="Matches pendientes"
                                   Style="{StaticResource SectionTitleStyle}" />

                        <TextBlock Text="No tienes matches pendientes por revisar"
                                   Foreground="{StaticResource TextLightBrush}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding MatchesPendientes.Count}"
                                                     Value="0">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <ItemsControl ItemsSource="{Binding MatchesPendientes}"
                                      Margin="0,8,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#E6F8FF"
                                            CornerRadius="16"
                                            Padding="12"
                                            Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="64" />
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <Ellipse Width="56"
                                                     Height="56"
                                                     Stroke="White"
                                                     StrokeThickness="2"
                                                     VerticalAlignment="Center">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding FotoPerfil}"
                                                                Stretch="UniformToFill" />
                                                </Ellipse.Fill>
                                            </Ellipse>

                                            <StackPanel Grid.Column="1"
                                                        Margin="12,0,0,0">
                                                <TextBlock Text="{Binding NombreContacto}"
                                                           FontWeight="Bold"
                                                           Foreground="{StaticResource TextDarkBrush}" />
                                                <TextBlock Text="{Binding MensajeResumen}"
                                                           FontSize="13"
                                                           Foreground="#3B3B3B" />
                                                <TextBlock Text="{Binding Descripcion}"
                                                           TextWrapping="Wrap"
                                                           Foreground="#555555"
                                                           FontSize="13"
                                                           Margin="0,4,0,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding TieneDescripcion}" Value="False">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2"
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <Button Content="Aceptar"
                                                        Command="{Binding DataContext.ComandoAceptarMatch, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource PillButtonStyle}"
                                                        Margin="0,0,8,0"
                                                        Background="#05AFC6"
                                                        Foreground="White" />
                                                <Button Content="Rechazar"
                                                        Command="{Binding DataContext.ComandoRechazarMatch, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource PillButtonStyle}"
                                                        Background="#FF6B6B"
                                                        Foreground="White" />
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Bandeja de chats -->
                    <StackPanel Margin="0,18,0,0">
                        <TextBlock Text="Chats"
                                   Style="{StaticResource SectionTitleStyle}" />

                        <Border Background="#D2F6FF"
                                CornerRadius="20"
                                Padding="10"
                                Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="18"
                                           Foreground="#4A4A4A"
                                           VerticalAlignment="Center"
                                           Text="" />

                                <TextBox Grid.Column="1"
                                         Text="{Binding FiltroBusqueda, UpdateSourceTrigger=PropertyChanged}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="#4A4A4A"
                                         FontSize="14"
                                         Margin="8,0,0,0"
                                         ToolTip="Buscar..." />
                            </Grid>
                        </Border>

                        <Border Background="#E6F8FF"
                                CornerRadius="18"
                                Padding="6">
                            <ListBox ItemsSource="{Binding ChatsView}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.Resources>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="Margin" Value="0" />
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                    </Style>
                                </ListBox.Resources>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource ChatListItemButtonStyle}"
                                                Command="{Binding DataContext.ComandoAbrirChat, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                CommandParameter="{Binding}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="56" />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <Ellipse Width="48"
                                                         Height="48"
                                                         Stroke="White"
                                                         StrokeThickness="2">
                                                    <Ellipse.Fill>
                                                        <ImageBrush ImageSource="{Binding FotoPerfil}"
                                                                    Stretch="UniformToFill" />
                                                    </Ellipse.Fill>
                                                </Ellipse>

                                                <StackPanel Grid.Column="1"
                                                            Margin="10,0,0,0"
                                                            VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding NombreContacto}"
                                                               FontWeight="Bold"
                                                               Foreground="{StaticResource TextDarkBrush}" />
                                                    <TextBlock Text="{Binding UltimoMensaje}"
                                                               FontSize="13"
                                                               Foreground="#555555"
                                                               TextTrimming="CharacterEllipsis" />
                                                </StackPanel>

                                                <Ellipse Grid.Column="2"
                                                         Width="12"
                                                         Height="12"
                                                         Fill="LimeGreen"
                                                         VerticalAlignment="Center"
                                                         Visibility="{Binding IsOnline, Converter={StaticResource BoolToVisibilityConverter}}" />
                                            </Grid>
                                        </Button>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>