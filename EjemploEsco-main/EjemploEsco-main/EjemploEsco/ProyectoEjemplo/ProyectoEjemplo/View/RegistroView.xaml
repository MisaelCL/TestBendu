<Window x:Class="ProyectoEjemplo.View.RegistroView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:ProyectoEjemplo.ViewModel"
        xmlns:customcontrols="clr-namespace:ProyectoEjemplo.CustomControls"
        
        xmlns:conv="clr-namespace:ProyectoEjemplo.Converter"
        mc:Ignorable="d"
        Title="Registro de Usuario" Height="560" Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.Resources>
        <conv:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>

    <Window.DataContext>
        <viewModel:RegistroViewModel/>
    </Window.DataContext>

    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/Images/imagen.png" Stretch="None"/>
        </Border.Background>

        <Border CornerRadius="10" BorderThickness="2" Opacity="0.95" Margin="0,0,0,-44">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                    <GradientStop Color="#8A16C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0.1,0" EndPoint="1,1">
                    <GradientStop Color="DarkBlue" Offset="0"/>
                    <GradientStop Color="DarkBlue" Offset="0.65"/>
                    <GradientStop Color="LightBlue" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- Encabezado -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="REGISTRO"
                               Foreground="AntiqueWhite"
                               FontSize="15"
                               FontFamily="Montserrat"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>

                    <Button x:Name="btnMinimizar" BorderThickness="0" Content="-" Foreground="White" FontSize="16"
                            Cursor="Hand" Grid.Column="1" Click="btnMinimizar_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28AEED"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9" Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnClose" BorderThickness="0" Content="x" Foreground="White" Cursor="Hand"
                            Grid.Column="2" Click="btnClose_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#DA34AD"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C62DAE"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9" Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <!-- CUERPO -->
                <StackPanel Width="280" Grid.Row="1" Orientation="Vertical" Margin="0,35,0,0" HorizontalAlignment="Center">
                    <Image Source="/Images/icon.png" Width="100" Height="100" />
                    <TextBlock Text="Crear nueva cuenta" Foreground="White" FontSize="20" FontWeight="Medium" HorizontalAlignment="Center" Margin="0,8,0,12"/>

                    <!-- Campos con placeholder -->

                    <Grid Margin="0,6,0,0">
                        <TextBox x:Name="txtUsuario" Text="{Binding User.Username, UpdateSourceTrigger=PropertyChanged}" 
FontSize="13" FontWeight="Medium" Foreground="White" CaretBrush="LightGray"
BorderBrush="DarkGray" BorderThickness="0,0,0,2" Height="28" VerticalContentAlignment="Center"
Padding="20,0,0,0" Background="Transparent"/>
                        <TextBlock Text="Usuario" Foreground="DarkGray" IsHitTestVisible="False"
  Margin="25,0,0,0" VerticalAlignment="Center"
  Visibility="{Binding Text, ElementName=txtUsuario, Converter={StaticResource StringToVisibilityConverter}}"/>
                    </Grid>

                    <!-- Passwords -->
                    <Grid Margin="0,6,0,0">
                        <TextBox x:Name="txtPassword" Text="{Binding User.Password, UpdateSourceTrigger=PropertyChanged}"
             FontSize="13" FontWeight="Medium" Foreground="DarkBlue" CaretBrush="LightGray"
             BorderBrush="DarkGray" BorderThickness="0,0,0,2" Height="28" VerticalContentAlignment="Center"
             Padding="20,0,0,0" Background="Transparent"/>
                        <TextBlock Text="Contraseña" Foreground="DarkGray" IsHitTestVisible="False"
               Margin="25,0,0,0" VerticalAlignment="Center"
               Visibility="{Binding Text, ElementName=txtPassword, Converter={StaticResource StringToVisibilityConverter}}"/>
                    </Grid>
                    <Grid Margin="0,6,0,0">
                        <TextBox x:Name="txtConfirmPass" Text="{Binding User.ConfirmPassword, UpdateSourceTrigger=PropertyChanged}"
             FontSize="13" FontWeight="Medium" Foreground="DarkBlue" CaretBrush="LightGray"
             BorderBrush="DarkGray" BorderThickness="0,0,0,2" Height="28" VerticalContentAlignment="Center"
             Padding="20,0,0,0" Background="Transparent"/>
                        <TextBlock Text="Confirmar Contraseña" Foreground="DarkGray" IsHitTestVisible="False"
               Margin="25,0,0,0" VerticalAlignment="Center"
               Visibility="{Binding Text, ElementName=txtConfirmPass, Converter={StaticResource StringToVisibilityConverter}}"/>
                    </Grid>



                    <Grid Margin="0,6,0,0">
                        <TextBox x:Name="txtNombre" Text="{Binding User.Name, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="13" FontWeight="Medium" Foreground="White" CaretBrush="LightGray"
                                 BorderBrush="DarkGray" BorderThickness="0,0,0,2" Height="28" VerticalContentAlignment="Center"
                                 Padding="20,0,0,0" Background="Transparent"/>
                        <TextBlock Text="Nombre" Foreground="DarkGray" IsHitTestVisible="False"
                                   Margin="25,0,0,0" VerticalAlignment="Center"
                                   Visibility="{Binding Text, ElementName=txtNombre, Converter={StaticResource StringToVisibilityConverter}}"/>
                    </Grid>
                   

                    <Grid Margin="0,6,0,0">
                        <TextBox x:Name="txtApellido" Text="{Binding User.LastName, UpdateSourceTrigger=PropertyChanged}" 
                                 FontSize="13" FontWeight="Medium" Foreground="White" CaretBrush="LightGray"
                                 BorderBrush="DarkGray" BorderThickness="0,0,0,2" Height="28" VerticalContentAlignment="Center"
                                 Padding="20,0,0,0" Background="Transparent"/>
                        <TextBlock Text="Apellido" Foreground="DarkGray" IsHitTestVisible="False"
                                   Margin="25,0,0,0" VerticalAlignment="Center"
                                   Visibility="{Binding Text, ElementName=txtApellido, Converter={StaticResource StringToVisibilityConverter}}"/>
                    </Grid>

                    <Grid Margin="0,6,0,0">
                        <TextBox x:Name="txtCorreo" Text="{Binding User.Email, UpdateSourceTrigger=PropertyChanged}" 
                                 FontSize="13" FontWeight="Medium" Foreground="White" CaretBrush="LightGray"
                                 BorderBrush="DarkGray" BorderThickness="0,0,0,2" Height="28" VerticalContentAlignment="Center"
                                 Padding="20,0,0,0" Background="Transparent"/>
                        <TextBlock Text="Correo electrónico" Foreground="DarkGray" IsHitTestVisible="False"
                                   Margin="25,0,0,0" VerticalAlignment="Center"
                                   Visibility="{Binding Text, ElementName=txtCorreo, Converter={StaticResource StringToVisibilityConverter}}"/>
                    </Grid>

                    

                    
                    
                    <!-- Mensaje de error -->
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="#D7596D" FontSize="12" FontWeight="Medium"
                               Margin="0,10,0,0" TextWrapping="Wrap"/>

                    <!-- Botón registrar -->
                    <Button x:Name="btnRegistrar" Command="{Binding AddCommand}" 
                            BorderThickness="0" Content="REGISTRAR" Foreground="DarkGray" FontSize="14" Cursor="Hand"
                            Margin="0,12,0,0">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#462AD8"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#28AEED"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Width="150" Height="40" CornerRadius="20" Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Cancelar -->
                    <Button x:Name="btnCancelar" Click="btnClose_Click" BorderThickness="0" Content="CANCELAR"
                            Foreground="White" FontSize="12" Cursor="Hand" Margin="0,8,0,0" Background="Transparent"/>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
