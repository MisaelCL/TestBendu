<UserControl x:Class="C_C.App.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListBox ItemsSource="{Binding Mensajes}" Grid.Row="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="4">
                        <TextBlock Text="{Binding Contenido}" TextWrapping="Wrap" />
                        <TextBlock Text="{Binding EnviadoEnUtc}" FontSize="10" Foreground="Gray" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,0">
            <TextBox Text="{Binding MessageText, UpdateSourceTrigger=PropertyChanged}" Width="400" Margin="0,0,8,0" />
            <Button Content="Enviar" Command="{Binding EnviarMensajeCommand}" />
        </StackPanel>
        <TextBlock Grid.Row="1" Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,40,0,0" />
    </Grid>
</UserControl>
