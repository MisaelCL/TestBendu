<UserControl x:Class="C_C.App.Views.AjustesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <StackPanel Width="320">
        <TextBlock Text="Seguridad y soporte" FontSize="24" FontWeight="Bold" Margin="0,0,0,12" />
        <TextBlock Text="Usuario objetivo (GUID)" />
        <TextBox Text="{Binding UsuarioObjetivo, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,12" />
        <TextBlock Text="Motivo" />
        <TextBox Text="{Binding Motivo, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" AcceptsReturn="True" Height="80" Margin="0,4,0,12" />
        <Button Content="Bloquear" Command="{Binding BloquearCommand}" Margin="0,4,0,4" />
        <Button Content="Reportar" Command="{Binding ReportarCommand}" Margin="0,4,0,8" />
        <TextBlock Text="{Binding Mensaje}" Foreground="Green" TextWrapping="Wrap" />
    </StackPanel>
</UserControl>
