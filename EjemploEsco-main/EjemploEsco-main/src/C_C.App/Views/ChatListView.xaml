<UserControl x:Class="C_C.App.Views.ChatListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <DockPanel>
        <ListBox ItemsSource="{Binding Chats}" SelectedItem="{Binding SelectedChat}" Margin="0,0,12,0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="Chat" FontWeight="Bold" />
                        <TextBlock Text="{Binding Id}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Width="200" Margin="12,0,0,0">
            <Button Content="Abrir" Command="{Binding AbrirChatCommand}" Margin="0,0,0,8" />
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap" />
        </StackPanel>
    </DockPanel>
</UserControl>
