<Window x:Class="C_C.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="C_C - App de Citas" Height="720" Width="1280" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <StackPanel DockPanel.Dock="Left" Width="200" Background="#FF1F2933" Padding="16">
            <TextBlock Text="C_C" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,16" />
            <Button Content="Login" Margin="0,4" Command="{Binding NavigateLoginCommand}" />
            <Button Content="Registro" Margin="0,4" Command="{Binding NavigateRegistroCommand}" />
            <Button Content="Descubrir" Margin="0,4" Command="{Binding NavigateDescubrirCommand}" />
            <Button Content="Matches" Margin="0,4" Command="{Binding NavigateMatchesCommand}" />
            <Button Content="Chats" Margin="0,4" Command="{Binding NavigateChatListCommand}" />
            <Button Content="Perfil" Margin="0,4" Command="{Binding NavigatePerfilCommand}" />
            <Button Content="Preferencias" Margin="0,4" Command="{Binding NavigatePreferenciasCommand}" />
            <Button Content="Ajustes" Margin="0,4" Command="{Binding NavigateAjustesCommand}" />
        </StackPanel>
        <Border Background="#FFF" Padding="24">
            <ContentControl Content="{Binding CurrentView}" />
        </Border>
    </DockPanel>
</Window>
