<UserControl x:Class="C_C.View.DescubrirView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Border Padding="16">
        <StackPanel>
            <TextBlock Text="Descubre nuevas personas" FontSize="20" FontWeight="Bold" />
            <Border BorderBrush="LightGray" BorderThickness="1" Padding="12" Margin="0,12,0,12">
                <StackPanel>
                    <TextBlock Text="{Binding PerfilActual.Nombre}" FontSize="18" FontWeight="Bold" />
                    <TextBlock Text="{Binding PerfilActual.Carrera}" />
                    <TextBlock Text="{Binding PerfilActual.Biografia}" TextWrapping="Wrap" Margin="0,8,0,0" />
                </StackPanel>
            </Border>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Omitir" Width="100" Command="{Binding SkipCommand}" Margin="0,0,8,0" />
                <Button Content="Me gusta" Width="100" Command="{Binding LikeCommand}" />
            </StackPanel>
            <TextBlock Text="{Binding MensajeEstado}" Foreground="Green" Margin="0,12,0,0" />
        </StackPanel>
    </Border>
</UserControl>
