<Window x:Class="C_C.View.RegistroView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="C&C - Registro"
        Height="500"
        Width="420"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="0,0,0,16" HorizontalAlignment="Center">
            <TextBlock Text="Crea tu cuenta" FontSize="24" FontWeight="Bold" />
            <TextBlock Text="Completa los datos para comenzar" />
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBlock Text="Usuario" />
            <TextBox Text="{Binding Usuario.Username, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Correo" Margin="0,8,0,0" />
            <TextBox Text="{Binding Usuario.Email, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Contraseña" Margin="0,8,0,0" />
            <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_OnPasswordChanged" />
            <TextBlock Text="Confirmar contraseña" Margin="0,8,0,0" />
            <PasswordBox x:Name="ConfirmPasswordBox" PasswordChanged="ConfirmPasswordBox_OnPasswordChanged" />
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,8,0,0" />
            <Button Content="Registrar"
                    Command="{Binding RegistrarCommand}"
                    Margin="0,16,0,0"
                    Height="32" />
            <Button Content="Volver"
                    Command="{Binding VolverLoginCommand}"
                    Margin="0,8,0,0"
                    Height="32" />
        </StackPanel>
    </Grid>
</Window>
