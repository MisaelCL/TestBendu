<UserControl x:Class="C_C.View.PreferenciasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <StackPanel Margin="16">
        <TextBlock Text="Preferencias" FontSize="20" FontWeight="Bold" />
        <TextBlock Text="Edad mínima" Margin="0,12,0,0" />
        <TextBox Text="{Binding Preferencias.EdadMinima, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock Text="Edad máxima" Margin="0,12,0,0" />
        <TextBox Text="{Binding Preferencias.EdadMaxima, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock Text="Carrera preferida" Margin="0,12,0,0" />
        <TextBox Text="{Binding Preferencias.CarreraObjetivo, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock Text="Intereses deseados" Margin="0,12,0,0" />
        <TextBox Text="{Binding Preferencias.InteresesDeseados, UpdateSourceTrigger=PropertyChanged}" />
        <Button Content="Guardar" Command="{Binding GuardarPreferenciasCommand}" Margin="0,16,0,0" Width="120" />
    </StackPanel>
</UserControl>
