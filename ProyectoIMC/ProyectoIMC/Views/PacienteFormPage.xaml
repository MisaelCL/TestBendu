<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ProyectoIMC.ViewModels"
             x:Class="ProyectoIMC.Views.PacienteFormPage"
             Title="{Binding Nombre, StringFormat='Paciente: {0}', TargetNullValue='Nuevo Paciente'}"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="20">

            <Border StrokeShape="RoundRectangle 10" BackgroundColor="White" Padding="16" StrokeThickness="0">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,2" Radius="3" Opacity="0.1"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="10">
                    <Label Text="Datos Personales" FontAttributes="Bold" TextColor="#2196F3"/>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <Entry Placeholder="Nombre" Text="{Binding Nombre}" Grid.Column="0"/>
                        <Entry Placeholder="Apellido" Text="{Binding Apellido}" Grid.Column="1"/>
                    </Grid>

                    <Picker x:Name="SexoPicker" Title="Sexo" SelectedIndexChanged="PickerSexo_SelectedIndexChanged">
                        <Picker.Items>
                            <x:String>Masculino</x:String>
                            <x:String>Femenino</x:String>
                        </Picker.Items>
                    </Picker>

                    <Picker x:Name="ActividadPicker" Title="Nivel de actividad" SelectedIndexChanged="PickerActividad_SelectedIndexChanged">
                        <Picker.Items>
                            <x:String>Sedentario</x:String>
                            <x:String>Ligero</x:String>
                            <x:String>Moderado</x:String>
                            <x:String>Intenso</x:String>
                            <x:String>Muy intenso</x:String>
                        </Picker.Items>
                    </Picker>
                </VerticalStackLayout>
            </Border>

            <Border StrokeShape="RoundRectangle 10" BackgroundColor="White" Padding="16" StrokeThickness="0">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,2" Radius="3" Opacity="0.1"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="10">
                    <Label Text="Medidas Corporales" FontAttributes="Bold" TextColor="#2196F3"/>

                    <Grid ColumnDefinitions="*, *, *" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="Edad" FontSize="12" TextColor="Gray"/>
                            <Entry Text="{Binding Edad, TargetNullValue=''}" Keyboard="Numeric" Placeholder="Años"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Peso" FontSize="12" TextColor="Gray"/>
                            <Entry Text="{Binding PesoKg, TargetNullValue=''}" Keyboard="Numeric" Placeholder="kg"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="2">
                            <Label Text="Estatura" FontSize="12" TextColor="Gray"/>
                            <Entry Text="{Binding EstaturaCm, TargetNullValue=''}" Keyboard="Numeric" Placeholder="cm"/>
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <Button Text="Calcular Indicadores" 
                    Command="{Binding CalcularIndicadoresCommand}"
                    BackgroundColor="#2196F3"
                    FontAttributes="Bold"
                    CornerRadius="20"/>

            <Border StrokeShape="RoundRectangle 10" 
                    BackgroundColor="#263238" 
                    Padding="16" 
                    StrokeThickness="0"
                    IsVisible="{Binding Imc, Converter={x:Static x:BooleanConverter.ContentProperty}, ConverterParameter=True}">
                <Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="*, *" RowSpacing="10" ColumnSpacing="10">
                    <Label Text="RESULTADOS" TextColor="White" FontAttributes="Bold" Grid.ColumnSpan="2"/>

                    <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" BackgroundColor="#37474F" StrokeShape="RoundRectangle 8" Padding="15">
                        <VerticalStackLayout HorizontalOptions="Center">
                            <Label Text="{Binding Imc, StringFormat='{0:F2}'}" FontSize="36" FontAttributes="Bold" TextColor="#4FC3F7" HorizontalTextAlignment="Center"/>
                            <Label Text="IMC" TextColor="#B0BEC5" HorizontalTextAlignment="Center" FontSize="12"/>
                            <Label Text="{Binding ClasificacionImc}" TextColor="White" FontAttributes="Bold" HorizontalTextAlignment="Center" Margin="0,5,0,0"/>
                        </VerticalStackLayout>
                    </Border>

                    <VerticalStackLayout Grid.Row="2" Grid.Column="0">
                        <Label Text="Grasa Corporal" TextColor="#B0BEC5" FontSize="11"/>
                        <Label Text="{Binding PorcentajeGrasa, StringFormat='{0:F2}%'}" TextColor="White" FontSize="16" FontAttributes="Bold"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Row="2" Grid.Column="1">
                        <Label Text="Peso Ideal" TextColor="#B0BEC5" FontSize="11"/>
                        <Label Text="{Binding PesoIdeal, StringFormat='{0:F2} kg'}" TextColor="White" FontSize="16" FontAttributes="Bold"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,0">
                        <Label Text="TDEE (Calorías diarias)" TextColor="#B0BEC5" FontSize="11" HorizontalTextAlignment="Center"/>
                        <Label Text="{Binding Tdee, StringFormat='{0:F0} kcal/día'}" TextColor="#FFD54F" FontSize="18" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>

                </Grid>
            </Border>

            <Label Text="{Binding ErrorMessage}" 
                   TextColor="#E53935" 
                   HorizontalTextAlignment="Center"
                   IsVisible="{Binding ErrorMessage, Converter={x:Static x:String.IsNotNullOrEmpty}}"/>

            <Button Text="Guardar Paciente" 
                    Command="{Binding GuardarCommand}" 
                    BackgroundColor="#4CAF50"
                    HeightRequest="50"
                    CornerRadius="25"
                    Margin="0,0,0,30"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>