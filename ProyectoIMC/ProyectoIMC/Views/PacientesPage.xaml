<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ProyectoIMC.ViewModels"
             x:Class="ProyectoIMC.Views.PacientesPage"
             x:Name="RootPage"
             Title="Pacientes"
             BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="Auto, *">
        <Border Grid.Row="0" Margin="16,16,16,8" StrokeShape="RoundRectangle 10" BackgroundColor="#2196F3" StrokeThickness="0">
            <Button Text="+ Nuevo Paciente"
                    Command="{Binding NuevoPacienteCommand}"
                    TextColor="White"
                    BackgroundColor="Transparent"
                    FontAttributes="Bold"
                    HeightRequest="50"/>
        </Border>

        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding Pacientes}"
                        SelectionMode="None"
                        Margin="0,0,0,16">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="16,4">
                        <Border StrokeShape="RoundRectangle 12"
                                BackgroundColor="White"
                                Padding="16"
                                StrokeThickness="0">
                            <Border.Shadow>
                                <Shadow Brush="Black" Offset="2,2" Radius="5" Opacity="0.1"/>
                            </Border.Shadow>

                            <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto, Auto">

                                <HorizontalStackLayout Grid.Row="0" Grid.Column="0" Spacing="5">
                                    <Label Text="{Binding Nombre}" FontSize="18" FontAttributes="Bold" TextColor="#333"/>
                                    <Label Text="{Binding Apellido}" FontSize="18" FontAttributes="Bold" TextColor="#333"/>
                                </HorizontalStackLayout>

                                <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Spacing="10" Margin="0,4,0,0">
                                    <Label Text="{Binding Edad, StringFormat='Age: {0}'}" TextColor="Gray" FontSize="14"/>
                                    <Label Text="|" TextColor="#E0E0E0"/>
                                    <Label Text="{Binding Sexo, StringFormat='Sex: {0}'}" TextColor="Gray" FontSize="14"/>
                                </HorizontalStackLayout>

                                <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" 
                                        BackgroundColor="#E3F2FD" 
                                        StrokeShape="RoundRectangle 4" 
                                        VerticalOptions="Start"
                                        Padding="8,4">
                                    <Label Text="{Binding IdPaciente, StringFormat='ID: {0}'}" 
                                           TextColor="#1976D2" 
                                           FontSize="10" 
                                           FontAttributes="Bold"/>
                                </Border>

                                <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                                                       HorizontalOptions="End" 
                                                       Spacing="16" 
                                                       Margin="0,12,0,0">

                                    <Label Text="EDITAR" 
                                           TextColor="#2196F3" 
                                           FontAttributes="Bold"
                                           FontSize="13">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding BindingContext.EditarPacienteCommand, Source={x:Reference RootPage}}"
                                                                  CommandParameter="{Binding .}"/>
                                        </Label.GestureRecognizers>
                                    </Label>

                                    <Label Text="ELIMINAR" 
                                           TextColor="#E53935" 
                                           FontAttributes="Bold"
                                           FontSize="13">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding BindingContext.EliminarPacienteCommand, Source={x:Reference RootPage}}"
                                                                  CommandParameter="{Binding .}"/>
                                        </Label.GestureRecognizers>
                                    </Label>
                                </HorizontalStackLayout>
                            </Grid>
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>